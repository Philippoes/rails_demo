<h1>Brocrunch</h1>
<h2>Latest news</h2>
<ul>
<% @articles.each do |article| %>
  <li>
    <%= article.title %> <br>
    <%= article.content %>
    <% if current_user != nil %>
        <% if article.user.email == current_user.email %>
            <p>Written by me at <%= article.created_at.strftime("%Y-%m-%d") %> </p>
        <% end %>
    <% else %>
        <p>Written by <%= article.user.email %> at <%= article.created_at.strftime("%Y-%m-%d") %> </p>
    <% end %>
    <%= form_tag article_comment_path, id: "article_#{article.id}" do %>
        <%= hidden_field_tag :article, article.id %>
        <%= label_tag :comment %>
        <%= text_field_tag :comment %>
        <%= label_tag :email %>
        <%= text_field_tag :email %>
        <%= submit_tag "Post", class: "button" %>
    <% end %>
    <% article.comments.each do |comment| %>
        <p><%= comment.email %>: <%= comment.content %></p>
    <% end %>
  </li>
  <% end %>
</ul>
