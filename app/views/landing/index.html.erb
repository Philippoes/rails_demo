<ul>
<% @articles.each do |article| %>
  <li>
    <%= article.title %>
    <%= article.content %>
    <p>Written by </p> <%= article.author %> <p> at <%= article.created_at.strftime("%Y-%m-%d") %> </p>

    <%= form_tag article_comment_path, id: "article_#{article.id}" do %>
        <%= hidden_field_tag :article, article.id %>
        <%= label_tag :comment %>
        <%= text_field_tag :comment%>
        <%= submit_tag "Post", class: "button" %>
    <% end %>

    <% article.comments.each do |comment| %>
     <%= comment.content %> <br>
    <% end %>

  </li>
  <% end %>
</ul>