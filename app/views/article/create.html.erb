<h2>Add a new Article!</h2>
<%= form_tag create_article_path do %>
    <%= label_tag :title %>
    <%= text_field_tag :title %><br>
    <%= label_tag :content %>
    <%= text_field_tag :content %><br>
    <%= label_tag :author %>
    <%= text_field_tag :author %><br>
    <%= submit_tag "Post Article", class: "button" %>
<% end %>